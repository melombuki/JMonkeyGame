<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
    <!-- ... -->
    <screen id="start" controller="com.hemen.CMSC325.FinalProject.GuiAppState">
        <layer id="background" childLayout="center">
             <image filename="Interface/StartBackground.png" height="100%" width="100%"></image>
        </layer>
        <layer id="foreground" childLayout="vertical">
            <panel id="panel_title" height="12.5%" width="75%" align="center" childLayout="center">  
                <text text="Hemen's Killer Game (a.k.a. The Final Project)" font="Interface/Fonts/Arial.fnt" color="#00ff" width="100%" height="100%" />
            </panel>
            <panel id="panel_input" height="25%" width="25%" align="center" valign="center" childLayout="vertical">
                <panel childLayout="horizontal">
                    <text id="totalRoundsLabel" style="nifty-label" text="Total Rounds: " width="120px" align="left" textVAlign="center" textHAlign="left" />
                    <control id="totalRounds" name="dropDown" />
                </panel>
                <panel childLayout="horizontal">
                    <text id="userInitialsLabel" style="nifty-label" text="Enter your initials: " width="120px" align="left" textVAlign="center" textHAlign="left" />
                    <control id="userInitials" name="textfield" />
                </panel>
            </panel>
            <panel id="panel_mid_bottom" height="50%" width="75%" align="center" childLayout="vertical">  
                <text text="You are on a mission on the planet SunakSunakLa that is inhabited by a hostile robotic army of consisting different geometric shapes. You evil robots have found you while on a supply run in your hover jet. You must destroy the evil mother ship also known as a Mega Drone. Beware of the micro drones that will attempt to capture you and prevent you from moving." font="Interface/Fonts/Arial.fnt" color="#00ff" width="100%" height="80%" wrap="true" /> 
                 <text text="Move with WASD and look around with the mouse. Shoot by left clicking. Press the E key to activate a short hyperdrive burst, but the space in front of you must be mostly clear for it to work." font="Interface/Fonts/Arial.fnt" color="#00ff" width="100%" height="20%" wrap="true" />               
            </panel>
            <panel id="panel_bottom" height="12.5%" width="75%" align="center" childLayout="horizontal">
                <panel id="StartPanel" height="100%" width="50%" align="center" childLayout="center">
                    <control name="button" label="Start" id="StartButton" align="center" valign="center">
                        <interact onClick="startGame()" />
                    </control>
                </panel>
                <panel id="QuitPanel" height="100%" width="50%" align="center" childLayout="center">
                    <control name="button" label="Quit" id="QuitButton" align="center" valign="center">
                        <interact onClick="quit()" />
                    </control>
                </panel>
            </panel>
        </layer>
    </screen>
    <!-- -->
    <screen id="hud" controller="com.hemen.CMSC325.FinalProject.GuiAppState">
        <layer id="background" childLayout="center">
            <image filename="Interface/HudBackground.png" height="100%" width="100%"></image>
        </layer>
        <!-- -->
        <layer id="forground" childLayout="vertical" align="center">
            <panel id="stats_panel" childLayout="horizontal" height="6%" width="100%">
                <text id="currentRound" text="Current Round: " font="Interface/Fonts/Arial.fnt" color="#00ff" width="10%" height="100%" textHAlign="left" />
                <text id="totalPoints" text="Total Score: 0" font="Interface/Fonts/Arial.fnt" color="#00ff" width="15%" height="100%" textHAlign="left" />
                <text id="hitObject" text="" font="Interface/Fonts/Arial.fnt" color="#00ff" width="45%" height="100%" />
                <text id="roundsFired" text="" font="Interface/Fonts/Arial.fnt" color="#00ff" width="15%" height="100%" />
                <text id="timer" text="" font="Interface/Fonts/Arial.fnt" color="#00ff" width="15%" height="100%" textHAlign="right" />
            </panel>
            <panel id="blank" childLayout="horizontal" height="94%" width="100%">
                <!-- Takes up the rest of the vertical space of this layer. -->
            </panel>
        </layer>
    </screen>
    <!-- -->
    <screen id="pause" controller="com.hemen.CMSC325.FinalProject.GuiAppState">
        <layer id="background" childLayout="center">
           <image filename="Interface/GUIBackground.png" height="100%" width="100%"></image>
        </layer>
        <layer id="foreground" align="center" childLayout="vertical" height="90%" width="90%">
            <panel id="pausedText" childLayout="center" height="50%" width="100%">
                <text text="Get ready for the next round. Press the continue button to go on." font="Interface/Fonts/Arial.fnt" color="#00ff" width="100%" height="100%" wrap="true" />    
            </panel>
            <panel id="reset_panel" childLayout="center" height="50%" width="100%">
                <control name="button" label="Continue" id="ContinueButton" align="center" valign="center">
                    <interact onClick="continueGame()" />
                </control>              
            </panel>
        </layer>
    </screen>
    <!-- -->
    <screen id="end" controller="com.hemen.CMSC325.FinalProject.GuiAppState">
        <layer id="background" childLayout="center">
            <image filename="Interface/HudBackground.png" height="100%" width="100%"></image>
            <!-- TODO: Add a pretty picture of something or other -->
        </layer>
        <!-- -->
        <layer id="forground" childLayout="vertical" align="center">
            <panel id="stats_panel" childLayout="horizontal" height="6%" width="100%">
                <text id="totalPointsEnd" text="Total Score: " font="Interface/Fonts/Arial.fnt" color="#00ff" width="100%" height="100%" />
            </panel>
            <panel id="blank" childLayout="vertical" height="69%" width="100%">
                <!-- Takes up the 75% of the vertical space of this layer and the top. -->
                <text id="1st" text="This" font="Interface/Fonts/Arial.fnt" color="#00ff" width="100%" height="20%" />
                <text id="2nd" text="is" font="Interface/Fonts/Arial.fnt" color="#00ff" width="100%" height="20%" />
                <text id="3rd" text="a" font="Interface/Fonts/Arial.fnt" color="#00ff" width="100%" height="20%" />
                <text id="4th" text="test" font="Interface/Fonts/Arial.fnt" color="#00ff" width="100%" height="20%" />
                <text id="5th" text="If it were a real exercise, AAAHHHH!!!" font="Interface/Fonts/Arial.fnt" color="#00ff" width="100%" height="20%" />
            </panel>
            <panel id="endButton" childLayout="center" height="25%" width="100%">
                <control name="button" label="OK" id="EndButton" align="center" valign="center">
                    <interact onClick="ackEnd()" />
                </control>
            </panel>
        </layer>
    </screen>
</nifty>
